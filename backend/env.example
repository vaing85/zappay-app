# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# MongoDB Configuration (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zappay?retryWrites=true&w=majority&appName=Cluster0
MONGODB_DB_NAME=zappay

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your_super_secure_jwt_secret_key_here_256_bits_minimum
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_here_256_bits_minimum

# Stripe Configuration (LIVE KEYS for production)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (SendGrid/SES)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@zappay.com
FROM_NAME=ZapPay

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration (Production settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Production domains)
CORS_ORIGIN=https://zappay.com,https://www.zappay.com
ALLOWED_ORIGINS=https://zappay.com,https://www.zappay.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Frontend Configuration
FRONTEND_URL=https://zappay.com

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# SSN Encryption (Critical Security)
SSN_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_generate_with_openssl_rand_hex_32
